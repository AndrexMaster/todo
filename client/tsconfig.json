{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "type": "module",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@Layouts/*": ["Layouts/*"],
      "@Modules/*": ["Modules/*"],
      "@Navigation/*": ["Modules/Navigation/*"],
      "@Types/*": ["Types/*"],
      "@Libs/*": ["Libs/*"],
      "@Pages/*": ["Pages/*"],
      "@Store/*": ["Store/*"],
      "@Themes/*": ["Themes/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules"]
}
